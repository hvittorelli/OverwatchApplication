@model IEnumerable<OverwatchApplication.Models.User>

@{
    ViewData["Title"] = "Users";
}

<h1 class="ow-title mb-4">Users</h1>

<div class="mb-4">
    <a asp-action="Create" class="ow-btn">✚ Add User</a>
</div>

<form method="get" class="d-flex justify-content-center gap-2 flex-wrap mb-4">

    <input type="text"
           name="searchString"
           class="ow-input"
           value="@(ViewData["CurrentSearch"]?.ToString() ?? "")"
           placeholder="Search Username or Email..."
           style="max-width: 220px;" />

    <select name="sortOrder" class="ow-input" style="max-width: 180px;">
        <option value="">Sort Username (A–Z)</option>
        <option value="name_desc">Sort Username (Z–A)</option>
    </select>

    <button type="submit" class="ow-btn">Apply</button>
    <a asp-action="Index" class="ow-btn" style="background:#db4c3f;">Clear</a>

</form>


<div class="card-grid">
    @foreach (var user in Model)
    {
        <div class="info-card" id="user-@user.UserID">

            <div class="card-title">@user.UserName</div>

            <button class="card-btn ow-btn" onclick="toggleDetails(@user.UserID)">Details</button>

            <div class="card-details" id="details-@user.UserID">
                <p><strong>Email:</strong> @user.Email</p>

                <div class="mt-3 d-flex justify-content-center gap-2">
                    <a asp-action="Edit" asp-route-id="@user.UserID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.UserID" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </div>

        </div>
    }
</div>

@section Scripts {
    <script>
        function toggleDetails(id) {
            const details = document.getElementById("details-" + id);
            details.classList.toggle("show");
        }
    </script>
}
