@model OverwatchApplication.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<h1 class="ow-title">Edit User</h1>

<form asp-action="Edit" class="ow-form">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="UserID" />

    <!-- User Name -->
    <div class="ow-field">
        <label asp-for="UserName" class="ow-label"></label>
        <input asp-for="UserName" class="ow-input" placeholder="Enter username" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <!-- Email -->
    <div class="ow-field">
        <label asp-for="Email" class="ow-label"></label>
        <input asp-for="Email" class="ow-input" placeholder="Enter email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- Password -->
    <div class="ow-field">
        <label asp-for="PasswordHash" class="ow-label"></label>
        <input asp-for="PasswordHash" class="ow-input" type="password" placeholder="Enter password" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>

    <!-- Submit -->
    <div class="ow-actions">
        <button type="submit" class="ow-btn">Save</button>
        <a asp-action="Index" class="ow-link">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
