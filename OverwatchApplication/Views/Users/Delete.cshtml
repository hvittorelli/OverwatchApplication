@model OverwatchApplication.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h1 class="ow-title">Delete User</h1>

<div class="ow-form">
    <h3>Are you sure you want to delete this user?</h3>

    <!-- User Details -->
    <div class="ow-field">
        <label class="ow-label">User Name</label>
        <p>@Model.UserName</p>
    </div>

    <div class="ow-field">
        <label class="ow-label">Email</label>
        <p>@Model.Email</p>
    </div>

    <div class="ow-field">
        <label class="ow-label">Password</label>
        <p>@Model.PasswordHash</p>
    </div>

    <!-- Actions -->
    <div class="ow-actions">
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="UserID" />
            <button type="submit" class="ow-btn">Delete</button>
            <a asp-action="Index" class="ow-link">Cancel</a>
        </form>
    </div>
</div>
