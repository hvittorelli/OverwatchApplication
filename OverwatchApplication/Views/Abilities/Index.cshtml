@model IEnumerable<OverwatchApplication.Models.Ability>

@{
    ViewData["Title"] = "Abilities";
}

<h1 class="ow-title mb-4">Abilities</h1>

<div class="mb-4">
    <a asp-action="Create" class="ow-btn">✚ Add Ability</a>
</div>

<form method="get" class="d-flex justify-content-center gap-2 flex-wrap mb-4">

    <input type="text"
           name="searchString"
           class="ow-input"
           value="@(ViewData["CurrentSearch"]?.ToString() ?? "")"
           placeholder="Search Name..."
           style="max-width: 200px;" />

    <select name="selectedType" class="ow-input" style="max-width: 180px;">
        <option value="">All Types</option>
        @foreach (var type in (ViewBag.TypeList as List<AbilityType>) ?? new List<AbilityType>())
        {
            var current = ViewData["CurrentType"] as AbilityType?;
            <option value="@type" selected="@(current.HasValue && current.Value == type)">
                @type
            </option>
        }
    </select>

    <select name="sortOrder" class="ow-input" style="max-width: 180px;">
        <option value="">Sort Name (A–Z)</option>
        <option value="name_desc">Sort Name (Z–A)</option>
        <option value="cooldown_asc">Cooldown (Low–High)</option>
        <option value="cooldown_desc">Cooldown (High–Low)</option>
    </select>

    <button type="submit" class="ow-btn">Apply</button>
    <a asp-action="Index" class="ow-btn" style="background:#db4c3f;">Clear</a>

</form>


<div class="card-grid">
    @foreach (var ability in Model)
    {
        <div class="info-card" id="ability-@ability.AbilityID">

            <div class="card-title">@ability.Name</div>

            <button class="card-btn ow-btn" onclick="toggleDetails(@ability.AbilityID)">Details</button>

            <div class="card-details" id="details-@ability.AbilityID">
                <p><strong>Description:</strong> @ability.Description</p>
                <p><strong>Type:</strong> @ability.Type</p>
                <p><strong>Cooldown:</strong> @ability.Cooldown</p>
                <p><strong>Hero:</strong> @ability.Hero.Name</p>

                <div class="mt-3 d-flex justify-content-center gap-2">
                    <a asp-action="Edit" asp-route-id="@ability.AbilityID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@ability.AbilityID" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </div>

        </div>
    }
</div>

@section Scripts {
    <script>
        function toggleDetails(id) {
            const details = document.getElementById("details-" + id);
            details.classList.toggle("show");
        }
    </script>
}
