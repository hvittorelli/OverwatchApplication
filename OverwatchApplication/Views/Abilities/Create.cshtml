@model OverwatchApplication.Models.Ability

@{
    ViewData["Title"] = "Create Ability";
}

<h1 class="ow-title">Create Ability</h1>

<form asp-action="Create" class="ow-form">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <!-- Ability Name -->
    <div class="ow-field">
        <label asp-for="Name" class="ow-label"></label>
        <input asp-for="Name" class="ow-input" placeholder="Blink" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Description -->
    <div class="ow-field">
        <label asp-for="Description" class="ow-label"></label>
        <textarea asp-for="Description" class="ow-input" rows="2"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Type -->
    <div class="ow-field">
        <label asp-for="Type" class="ow-label"></label>
        <select asp-for="Type" class="ow-input">
            <option value="">Select Type</option>
            <option>Primary</option>
            <option>Secondary</option>
            <option>Ultimate</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <!-- Cooldown -->
    <div class="ow-field">
        <label asp-for="Cooldown" class="ow-label"></label>
        <input asp-for="Cooldown" class="ow-input" placeholder="10 seconds" />
        <span asp-validation-for="Cooldown" class="text-danger"></span>
    </div>

    <!-- Hero Dropdown -->
    <div class="ow-field">
        <label asp-for="HeroID" class="ow-label"></label>
        <select asp-for="HeroID" class="ow-input" asp-items="ViewBag.Heroes">
            <option value="">Select Hero</option>
        </select>
        <span asp-validation-for="HeroID" class="text-danger"></span>
    </div>

    <!-- Submit -->
    <div class="ow-actions">
        <button type="submit" class="ow-btn">Create</button>
        <a asp-action="Index" class="ow-link">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
