@model OverwatchApplication.Models.Ability

@{
    ViewData["Title"] = "Delete Ability";
}

<h1 class="ow-title">Delete Ability</h1>

<p>Are you sure you want to delete this ability?</p>

<div class="ow-form">
    <div class="ow-field">
        <label class="ow-label">Name</label>
        <p class="ow-input">@Model.Name</p>
    </div>

    <div class="ow-field">
        <label class="ow-label">Description</label>
        <p class="ow-input">@Model.Description</p>
    </div>

    <div class="ow-field">
        <label class="ow-label">Type</label>
        <p class="ow-input">@Model.Type</p>
    </div>

    <div class="ow-field">
        <label class="ow-label">Cooldown</label>
        <p class="ow-input">@Model.Cooldown</p>
    </div>

    <div class="ow-field">
        <label class="ow-label">Hero</label>
        <p class="ow-input">@Model.Hero?.Name</p>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AbilityID" />
        <div class="ow-actions">
            <dic asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="AbilityID" />
                <button type="submit" class="ow-btn">Delete</button>
                <a asp-action="Index" class="ow-link">Cancel</a>
            </div>
    </form>
</div>
