@model OverwatchApplication.Models.Hero

@{
    ViewData["Title"] = "Delete Hero";
}

<h1 class="ow-title">Delete Hero</h1>

<div class="ow-form">
    <h3>Are you sure you want to delete this hero?</h3>

    <!-- Hero Details -->
    <div class="ow-field">
        <label class="ow-label">Name</label>
        <p>@Model.Name</p>
    </div>

    <div class="ow-field">
        <label class="ow-label">Role</label>
        <p>@Model.Role</p>
    </div>

    <div class="ow-field">
        <label class="ow-label">Description</label>
        <p>@Model.Description</p>
    </div>

    <div class="ow-field">
        <label class="ow-label">Hero Image</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageURL))
        {
            <img src="@Model.ImageURL" alt="@Model.Name" class="img-thumbnail" width="150" />
        }
    </div>

    <div class="ow-actions">
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="HeroID" />
            <button type="submit" class="ow-btn">Delete</button>
            <a asp-action="Index" class="ow-link">Cancel</a>
        </form>
    </div>
</div>
