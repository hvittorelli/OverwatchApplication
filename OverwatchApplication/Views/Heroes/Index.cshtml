@model IEnumerable<OverwatchApplication.Models.Hero>

@{
    ViewData["Title"] = "Heroes";
}

<h1 class="ow-title mb-4">Heroes</h1>

<div class="mb-4">
    <a asp-action="Create" class="ow-btn">✚ Add Hero</a>
</div>

<form method="get" class="d-flex justify-content-center gap-2 flex-wrap mb-4">
    <input type="text"
           name="searchString"
           class="ow-input"
           value="@(ViewData["CurrentSearch"] as string ?? "")"
           placeholder="Search Name..."
           style="max-width: 200px;" />

    <select name="selectedRole" class="ow-input" style="max-width: 180px;">
        <option value="">All Roles</option>
        @foreach (var role in (ViewBag.RoleList as List<string>) ?? new List<string>())
        {
            <option value="@role"
                    selected="@(role == (string?)ViewData["CurrentRole"])">
                @role
            </option>
        }
    </select>

    <select name="sortOrder" class="ow-input" style="max-width: 180px;">
        <option value="">Sort by Name (A–Z)</option>
        <option value="name_desc">Name (Z–A)</option>
        <option value="difficulty">Difficulty (Low–High)</option>
        <option value="difficulty_desc">Difficulty (High–Low)</option>
    </select>

    <button type="submit" class="ow-btn">Apply</button>
    <a asp-action="Index" class="ow-btn" style="background:#db4c3f;">Clear</a>
</form>


<div class="card-grid">
    @foreach (var hero in Model)
    {
        <div class="info-card" id="hero-@hero.HeroID">

            <img src="@hero.ImageURL" alt="@hero.Name" class="card-img" />

            <div class="card-title">@hero.Name</div>

            <button class="card-btn ow-btn" onclick="toggleDetails(@hero.HeroID)">Details</button>

            <div class="card-details" id="details-@hero.HeroID">
                <p><strong>Role:</strong> @hero.Role</p>
                <p><strong>Gender:</strong> @hero.Gender</p>
                <p><strong>Country:</strong> @hero.CountryOfOrigin</p>
                <p><strong>Difficulty:</strong> @hero.DifficultyToMaster</p>
                <p><strong>Weapon:</strong> @hero.WeaponType</p>
                <p><strong>Description:</strong> @hero.Description</p>

                <div class="mt-3 d-flex justify-content-center gap-2">
                    <a asp-action="Edit" asp-route-id="@hero.HeroID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@hero.HeroID" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </div>

        </div>
    }
</div>

@section Scripts {
    <script>
        function toggleDetails(id) {
            const details = document.getElementById("details-" + id);
            details.classList.toggle("show");
        }
    </script>
}
