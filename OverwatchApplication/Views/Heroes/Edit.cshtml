@model OverwatchApplication.Models.Hero

@{
    ViewData["Title"] = "Edit Hero";
}

<h1 class="ow-title">Edit Hero</h1>

<form asp-action="Edit" enctype="multipart/form-data" class="ow-form">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="HeroID" />
    <input type="hidden" asp-for="ImageURL" />

    @if (!string.IsNullOrEmpty(Model.ImageURL))
    {
        <div class="ow-field">
            <label class="ow-label">Current Image</label>
            <img src="@Model.ImageURL" style="max-height:150px; border-radius:8px;" />
        </div>
    }

    <div class="ow-field">
        <label class="ow-label">Upload New Image (optional)</label>
        <input type="file" name="ImageFile" class="ow-input" />
    </div>

    <div class="ow-field">
        <label asp-for="Name" class="ow-label"></label>
        <input asp-for="Name" class="ow-input" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="ow-field">
        <label asp-for="Role" class="ow-label"></label>
        <select asp-for="Role" class="ow-input" asp-items="Html.GetEnumSelectList<RoleType>()"></select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div class="ow-field">
        <label asp-for="Description" class="ow-label"></label>
        <textarea asp-for="Description" class="ow-input"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="ow-field">
        <label asp-for="CountryOfOrigin" class="ow-label"></label>
        <input asp-for="CountryOfOrigin" class="ow-input" />
        <span asp-validation-for="CountryOfOrigin" class="text-danger"></span>
    </div>

    <div class="ow-field">
        <label asp-for="Gender" class="ow-label"></label>
        <input asp-for="Gender" class="ow-input" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="ow-field">
        <label asp-for="WeaponType" class="ow-label"></label>
        <input asp-for="WeaponType" class="ow-input" />
        <span asp-validation-for="WeaponType" class="text-danger"></span>
    </div>

    <div class="ow-field">
        <label asp-for="DifficultyToMaster" class="ow-label"></label>
        <input asp-for="DifficultyToMaster" type="number" min="1" max="5" class="ow-input" />
        <span asp-validation-for="DifficultyToMaster" class="text-danger"></span>
    </div>

    <div class="ow-actions">
        <button type="submit" class="ow-btn">Save</button>
        <a asp-action="Index" class="ow-link">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
